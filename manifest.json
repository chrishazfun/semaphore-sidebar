{
	"manifest_version": 2,
	"name": "Mastodon as a Sidebar (Semaphore)",
	"description": "Displays a sidebar that lets you talk to your friends using Mastodon through a lightweight client.",
	"version": "2.2",
	"applications": {
		"gecko": {
			"strict_min_version": "54.0a1"
		}
	},
	"icons": {
		"512": "icons/icon512.png"
	},
	"commands": {
		"_execute_sidebar_action": {
			"suggested_key": {
				"default": "Alt+Shift+M"
			},
			"description": "Opens and closes Mastodon sidebar"
		}
	},
	"sidebar_action": {
		"default_icon": {
			"512": "icons/icon512.png"
		},
		"default_title": "Mastodon",
		"default_panel": "index.html"
	},
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"permissions": [
		"<all_urls>",
		"storage",
		"menus"
	]
}